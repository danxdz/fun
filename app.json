{
  "name": "autobot-manager",
  "description": "A complete SaaS platform for automated git repository management and code updates",
  "repository": "https://github.com/danxdz/fun",
  "logo": "https://raw.githubusercontent.com/danxdz/fun/main/public/logo.svg",
  "keywords": ["node", "express", "react", "saas", "automation", "git", "bots"],
  "env": {
    "NODE_ENV": {
      "description": "Environment setting",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "DB_HOST": {
      "description": "Database host",
      "value": "localhost"
    },
    "DB_PORT": {
      "description": "Database port",
      "value": "5432"
    },
    "DB_NAME": {
      "description": "Database name",
      "value": "autobot_manager"
    },
    "DB_USER": {
      "description": "Database user",
      "value": "postgres"
    },
    "DB_PASSWORD": {
      "description": "Database password",
      "required": true
    },
    "FRONTEND_URL": {
      "description": "Frontend URL",
      "value": "https://your-app-name.herokuapp.com"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "npm run db:migrate && npm run db:seed"
  }
}